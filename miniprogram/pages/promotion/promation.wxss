/* pages/promotion/promation.wxss */
/* wxss */
.container {
  background: linear-gradient(180deg, #a1ffce 0%, #faffd1 100%);
  padding: 20rpx;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #000;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
}

.back-icon {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.form-section {
  background: #fff;
  border-radius: 30rpx;
  padding: 30rpx;
  margin: 20rpx 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-label {
  display: flex;
  align-items: center;
  gap: 20rpx;
  width: 200rpx;
}

.form-icon {
  width: 50rpx;
  height: 50rpx;
  object-fit: contain;
}

.form-input {
  flex: 1;
  font-size: 34rpx;
  color: #666;
  border: none;
  outline: none;
}

.rule-item {
  background: #fff;
  border-radius: 30rpx;
  padding: 30rpx;
  margin: 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.rule-label {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.arrow-icon {
  font-size: 36rpx;
  color: #999;
}

.submit-btn {
  background: #333;
  color: #a1ffce;
  font-size: 40rpx;
  font-weight: bold;
  border: none;
  border-radius: 50rpx;
  padding: 30rpx;
  margin-top: 40rpx;
  width: 100%;
  max-width: 800rpx;
}