.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #fff;
  box-sizing: border-box; /* 关键样式 */
}

.header {
  padding: 30rpx;
  background-color: #f8f8f8;
  box-sizing: border-box; /* 关键样式 */
}

.title {
  display: block;
  font-size: 42rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
  color: #333;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #666;
  word-wrap: break-word; /* 关键样式 */
  word-break: normal; /* 关键样式 */
}

.content {
  flex: 1;
  padding: 30rpx;
  font-size: 28rpx;
  line-height: 48rpx;
  color: #333;
  box-sizing: border-box; /* 关键样式 */
}

.section {
  margin-bottom: 40rpx;
}

.section-header {
  margin-bottom: 20rpx;
}

.section-title {
  display: block;
  font-size: 34rpx;
  font-weight: bold;
  color: #1677ff;
  border-left: 6rpx solid #1677ff;
  padding-left: 14rpx;
}

.duty-item {
  margin-bottom: 25rpx;
}

.duty-title {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.duty-content {
  display: block;
  color: #666;
  margin-top: 10rpx;
  word-wrap: break-word; /* 关键样式 */
  word-break: normal; /* 关键样式 */
}