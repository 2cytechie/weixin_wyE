<view class="container">
  <!-- 顶部导航栏 -->
  <navigator class="back-btn" url="/pages/start/start">
  </navigator>
  <!-- 取外卖图片 -->
    <image src="/images/3.png" mode="aspectFill" class="top-image"/>
  <view class="textarea-item">
    <view>
      <image src="/images/takeout/images.png" class="item-icon" />
      <text class="item-label">游戏信息</text>
    </view>
    <textarea bindinput="set_message_data"
    data-takeout_type = "takeout_message"
    placeholder="请输入游戏信息"
    class="textarea" />
  </view>

  <!-- 游戏类型 -->
  <view class="form-item">
    <image src="/images/游戏.png" class="item-icon" />
    <input bindinput="set_message_data"
    data-takeout_type = "takeout_pick_location"
    placeholder="游戏类型"
    confirm-type="done"
    class="item-input" />
  </view>
  <!-- 时长 -->
  <view class="form-item">
    <image src="/images/时间.png" class="item-icon" />
    <input bindinput="set_message_data"
    data-takeout_type = "takeout_send_location"
    placeholder="游戏时长"
    confirm-type="done"
    class="item-input" />
  </view>
  <!-- 性别 -->
  <view>--------性别（测试）-------</view>

  <!-- 立即下单按钮 -->
  <view class="xiadan" bind:tap="order">立即下单</view>
</view>