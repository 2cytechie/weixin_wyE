/* pages/xeiyi/xeiyi.wxss */
.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #fff;
}

.agreement-header {
  padding: 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #eee;
}

title {
  display: block;
  font-size: 42rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
  color: #333;
}

.provider {
  display: block;
  font-size: 28rpx;
  text-align: center;
  color: #666;
}

.agreement-content {
  flex: 1;
  padding: 30rpx;
  font-size: 28rpx;
  line-height: 48rpx;
  color: #333;
  word-wrap: break-word; /* 关键：自动换行长文本 */
  white-space: normal; /* 确保文本正常换行，覆盖默认nowrap */
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 20rpx 0;
}

.highlight {
  color: #e64340;
  font-weight: 500;
}

.agree-btn {
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  margin: 30rpx auto;
  background-color: #1aad19;
  color: #fff;
  border-radius: 45rpx;
  font-size: 32rpx;
}