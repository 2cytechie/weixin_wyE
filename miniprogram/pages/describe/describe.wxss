/* pages/describe/describe.wxss */
.container {
  background: #fff;
  padding: 25rpx;
  height: 100vh; /* 占满整个屏幕高度 */
}

/* 导航栏样式 */
.nav-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
  margin-bottom: 30rpx;
}
.nav-left {
  position: absolute;
  left: 20rpx;
}
.back-icon {
  width: 30rpx;
}
.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  margin: 0 auto;
}

/* 内容区域样式 */
.content {
  font-size: 30rpx;
  line-height: 1.6;
}
h1 {
  font-size: 40rpx;
  font-weight: bold;
  border-bottom: 2rpx solid #f5f5f5;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}
p {
  color: #333;
  margin-bottom: 20rpx;
}
ol {
  padding-left: 40rpx;
  margin-bottom: 20rpx;
}
li {
  color: #333;
  margin-bottom: 15rpx;
}