/* pages/login/login.wxss */
.container {
  background: linear-gradient(180deg, #F8FFBD 0%, #FFFFFF 100%);
  padding: 25rpx;
  height: 100vh; /* 占满整个屏幕高度 */
  padding: 40rpx 30rpx;
}

.header {
  display: flex;
  align-items: center;
  margin-bottom: 60rpx;
}
.text-hello{
  font-size: 80rpx;
  font-weight: bold;
  margin-right: 20rpx;
}
.title {
  font-size: 60rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.login-type {
  margin-left:290rpx;
  background: #B9F6CA;
  color: #000;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
}

.login-box {
  display: flex;
  flex-direction: column;
  height: 1250rpx;
  background: white;
  padding: 40rpx;
  border-radius: 30rpx;
}

.login-title {
  font-size: 32rpx;
  color: #66BB6A;
  margin-bottom: 20rpx;
}


.login-btn {
  background: #333;
  color: #FFEB3B;
  padding: 20rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  margin-bottom: 40rpx;
  margin-top: 80rpx;
  text-align: center;
}

.agreement {
  margin-top: auto;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.link {
  color: #66BB6A;
}

.phone-popup {
  position: fixed;
  bottom: 0;
  left: 25rpx;
  right: 25rpx;
  background: white;
  padding: 20rpx;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  box-shadow: 0 -2rpx 20rpx rgba(0,0,0,0.1);
}

.popup-header {
  font-size: 32rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.phone-list {
  display: flex;
  flex-direction: column;
  text-align: center;
}

.phone-item {
  padding: 20rpx;
  font-size: 32rpx;
  border-bottom: 1rpx solid #eee;
}
.user-info-container {
  padding: 20rpx;
  background: linear-gradient(180deg, #F8FFBD 0%, #FFFFFF 100%);
  min-height: 100vh;
}

.user-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-name-gender {
  display: flex;
  /* flex-direction: column; */
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.user-gender {
  font-size: 24rpx;
  color: #666;
}

.user-details {
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  padding: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #eee;
  margin-top: 20rpx;
}

.info-label {
  font-size: 34rpx;
  color: #333;
}

.info-value {
  font-size: 28rpx;
  color: #666;
}
