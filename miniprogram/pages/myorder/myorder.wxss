/* pages/order/order.wxss */
.container {
  background: #ffffff;
  padding: 25rpx;
  height: 100vh; /* 占满整个屏幕高度 */
}

/* wxss */
.tab-scroll {
  height: 80rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #f0f0f0;
  overflow-x: auto; /* 强制显示滚动 */
  -webkit-overflow-scrolling: touch; /* 优化滚动流畅度 */
}
.tab-item {
  display: inline-block; /* 确保横向排列 */
  padding: 0 20rpx;
  font-size: 32rpx;
  color: #333;
  line-height: 80rpx;
  margin-left: 20rpx;
}
.active {
  color: #4CAF50;
  position: relative;
}
.active::after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #4CAF50;
}

/* 内容区域样式 */
.content-swiper {
  height: calc(100vh - 160rpx);
}
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx;
}
.empty-container image {
  width: 400rpx;
  margin-bottom: 40rpx;
}
.empty-tip {
  font-size: 32rpx;
  color: #999;
  text-align: center;
}