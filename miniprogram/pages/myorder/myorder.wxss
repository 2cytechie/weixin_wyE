.container {
  background: #f8f8f8;
}

/* 顶部导航栏 */
.nav-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  background: white;
}
.nav-left {
  position: absolute;
  left: 20rpx;
}
.back-icon { width: 30rpx; }
.nav-title {
  font-size: 36rpx;
  font-weight: bold;
}

/* 订单分类选项卡（模拟 tabBar 效果） */
.order-tab-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60rpx;
  background: white;
  border-bottom: 2rpx solid #f5f5f5;
}
.order-tab-item {
  margin: 0 20rpx;
  font-size: 28rpx;
  color: #666;
  padding-bottom: 10rpx;
}
.order-tab-item.active {
  color: #4CAF50;
  border-bottom: 4rpx solid #4CAF50;
}

/* 无订单提示 */
.no-order-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
}
.no-order-img {
  width: 400rpx;
  margin-bottom: 20rpx;
}
.no-order-tip {
  font-size: 30rpx;
  color: #999;
}