/* pages/order/order.wxss */
.container {
  background-color: #fafafa;
  padding: 25rpx;
  min-height: 100vh;
}


/* wxss */
.tab-scroll {
  height: 80rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #f0f0f0;
  overflow-x: auto; /* 强制显示滚动 */
  -webkit-overflow-scrolling: touch; /* 优化滚动流畅度 */
}
.tab-item {
  display: inline-block; /* 确保横向排列 */
  padding: 0 20rpx;
  font-size: 32rpx;
  color: #333;
  line-height: 80rpx;
  margin-left: 20rpx;
}
.active {
  color: #4CAF50;
  position: relative;
}
.active::after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #4CAF50;
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx;
}
.empty-container image {
  width: 400rpx;
  margin-bottom: 40rpx;
}
.empty-tip {
  font-size: 32rpx;
  color: #999;
  text-align: center;
}
.task-list{
  margin-top: 20rpx;
}
.task-item {
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(130, 130, 255, 0.1); /* 蓝色阴影边框 */
}
.task-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff9e6;
}
.task-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.task-type {
  background: #e0f7fa;
  color: #009688;
  padding: 10rpx 15rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}
.task-imageclock{
  margin-left: 30rpx;
  width: 40rpx;
  height: 40rpx;
}
.task-time {
  color: #666;
  font-size: 28rpx;
  margin-left: 10rpx;
}
.task-status0 {
  background: #76ff03;
  color: #000;
  padding: 10rpx 25rpx;
  border-radius: 30rpx;
  margin-left: auto;
  font-size: 30rpx;
  font-weight: bold;
}
.task-status1 {
  background: yellow;
  color: #000;
  padding: 10rpx 25rpx;
  border-radius: 30rpx;
  margin-left: auto;
  font-size: 30rpx;
  font-weight: bold;
}

/* 任务详情样式 */
.task-content {
  padding: 20rpx;
}
.task-content text {
  font-size: 32rpx;
  line-height: 48rpx;
}
.task-location {
  display: flex;
  align-items: center;
  margin: 30rpx 5rpx;
}
.reward {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  margin : 15rpx 5rpx;
  justify-content: space-between;
}
.text-red{
  color: red;
}
.reward-icon {
  width: 35rpx;
  height: 35rpx;
  margin-right: 15rpx;
}

/* 底部导航样式 */
.tab-bar {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}
.tab-item {
  text-align: center;
}
.tab-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}
.active {
  color: #009688;
}
.text{
  margin-left: 10rpx;
}
.location-icon {
  width: 35rpx;
  height: 35rpx;
  margin-right: 10rpx;
}