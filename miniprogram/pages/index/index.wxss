/* 页面整体样式 */
.page-container {
  padding: 40rpx;
  flex: 1;
  background-color: #f5f5f5;
}

/* 昵称修改弹窗 */
.nickname-modal {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 400rpx; /* 弹窗高度 */
  background-color: #ffffff; /* 白色背景 */
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  box-shadow: 0 -2rpx 16rpx rgba(0, 0, 0, 0.1);
  z-index: 1000;
}

.modal-content {
  padding: 40rpx 32rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  color: #333;
  margin-bottom: 32rpx;
}

.nickname-input {
  height: 80rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #eee;
  padding: 0 16rpx;
}

.modal-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.cancel-btn {
  color: #666;
  font-size: 28rpx;
  padding: 0;
  width: 120rpx;
}

.confirm-btn {
  color: #007aff;
  font-size: 28rpx;
  padding: 0;
  width: 120rpx;
}