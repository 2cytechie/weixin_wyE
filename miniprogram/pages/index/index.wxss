.container {
  padding: 20px;
}

.header {
  text-align: center;
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}

.filter-tags {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20px;
}

.tag {
  cursor: pointer;
}

.top-button {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px;
  border-bottom: 1px solid #eee;
}

.reset-button,
.confirm-button {
  padding: 10px;
  text-align: center;
  cursor: pointer;
}

.task-list {
  margin-top: 20px;
}

.task-item {
  border: 1px solid #eee;
  padding: 10px;
  margin-bottom: 10px;
  cursor: pointer;
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}

.task-type {
  font-weight: bold;
}

.task-time {
  margin-left: 10px;
}

.task-status0 {
  color: green;
}

.task-status1 {
  color: gray;
}

.task-content {
  margin-top: 10px;
}

.task-location,
.reward {
  display: flex;
  align-items: center;
  margin-top: 5px;
}

.location-icon,
.reward-icon {
  width: 20px;
  height: 20px;
  margin-right: 5px;
}    