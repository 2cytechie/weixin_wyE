/* pages/coupons/coupons.wxss */
.container {
  background: #fff;
  padding: 25rpx;
  height: 100vh; /* 占满整个屏幕高度 */
}

/* 导航栏样式 */
.nav-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  border-bottom: 2rpx solid #f5f5f5;
  margin-bottom: 30rpx;
}
.nav-left {
  position: absolute;
  left: 20rpx;
}
.back-icon { width: 30rpx; }
.nav-title {
  font-size: 36rpx;
  font-weight: bold;
}

/* 优惠券卡片样式 */
.coupon-card {
  background: #fef4f4;
  padding: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}
.coupon-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}
.coupon-icon {
  width: 80rpx;
  height: 80rpx;
  background: #ffe4e1;
  border-radius: 10rpx;
}
.coupon-info {
  flex: 1;
  margin-left: 20rpx;
}
.coupon-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.coupon-time {
  font-size: 28rpx;
  color: #999;
}
.coupon-price {
  text-align: right;
}
.price-text {
  font-size: 32rpx;
  color: #ff4444;
  font-weight: bold;
}
.condition {
  font-size: 26rpx;
  color: #999;
}
.coupon-line {
  height: 2rpx;
  background: #f5f5f5;
  margin: 15rpx 0;
}
.coupon-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.usage {
  font-size: 28rpx;
  color: #666;
}
.use-btn {
  background: #ff4444;
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  border: none;
}

/* 无更多提示样式 */
.no-more-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
}