<!-- index.wxml -->
<view class="container">
  <!-- 时间展示区域 -->
  <view class="time-display" bindtap="showTimePicker">
    {{selectedTime || '点击选择时间'}}
  </view>

  <!-- 自定义时间选择弹窗 -->
  <view class="time-picker-modal" wx:if="{{showPicker}}">
    <view class="picker-header">
      <text bindtap="hideTimePicker">取消</text>
      <text bindtap="confirmTime">确定</text>
    </view>
    
    <!-- 时间选择器 -->
    <picker-view 
      value="{{timeIndex}}" 
      bindchange="timeChange" 
      indicator-style="height: 50px;"
      class="time-picker"
    >
      <!-- 小时列 -->
      <picker-view-column>
        <view wx:for="{{hours}}" wx:key="hour{{index}}" class="picker-item">
          {{item < 10 ? '0' + item : item}}
        </view>
      </picker-view-column>
      
      <!-- 分钟列 -->
      <picker-view-column>
        <view wx:for="{{minutes}}" wx:key="minute{{index}}" class="picker-item">
          {{item < 10 ? '0' + item : item}}
        </view>
      </picker-view-column>
    </picker-view>
  </view>

  <!-- 遮罩层 -->
  <view 
    class="mask" 
    wx:if="{{showPicker}}" 
    bindtap="hideTimePicker"
  ></view>
</view>