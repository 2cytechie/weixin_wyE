.container {
  background: #f0fff0;
  padding: 25rpx;
}

/* 顶部标题栏样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.title {
  margin-left: 25rpx;
  align-items: center;
  font-size: 40rpx;
  font-weight: bold;
}
.eye-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 搜索栏样式 */
.search-bar {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 15rpx;
  border-radius: 50rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.search-icon {
  width: 30rpx;
  height: 30rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
}
input {
  flex: 1;
  font-size: 28rpx;
}

/* 筛选标签样式 */
.filter-tags {
  display: flex;
  margin-bottom: 20rpx;
  justify-content: space-around;
}
.tag {
  margin-right: 20rpx;
  color: #666;
  font-size: 28rpx;
}

/* 任务列表样式 */
.task-item {
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}
.task-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff9e6;
}
.task-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.task-type {
  background: #e0f7fa;
  color: #009688;
  padding: 10rpx 15rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}
.task-imageclock{
  margin-left: 30rpx;
  width: 40rpx;
  height: 40rpx;
}
.task-time {
  color: #666;
  font-size: 28rpx;
  margin-left: 10rpx;
}
.task-status0 {
  background: #76ff03;
  color: #000;
  padding: 10rpx 25rpx;
  border-radius: 30rpx;
  margin-left: auto;
  font-size: 30rpx;
  font-weight: bold;
}
.task-status1 {
  background: yellow;
  color: #000;
  padding: 10rpx 25rpx;
  border-radius: 30rpx;
  margin-left: auto;
  font-size: 30rpx;
  font-weight: bold;
}

/* 任务详情样式 */
.task-content {
  padding: 20rpx;
}
.task-content text {
  font-size: 32rpx;
  line-height: 48rpx;
}
.task-location {
  display: flex;
  align-items: center;
  margin: 30rpx 5rpx;
}
.location-icon {
  width: 35rpx;
  height: 35rpx;
  margin-right: 10rpx;
}
.reward {
  display: flex;
  align-items: center;
  color: #e53935;
  font-size: 32rpx;
  font-weight: bold;
  margin : 15rpx 5rpx;
}
.reward-icon {
  width: 35rpx;
  height: 35rpx;
  margin-right: 15rpx;
}

/* 底部导航样式 */
.tab-bar {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}
.tab-item {
  text-align: center;
}
.tab-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}
.active {
  color: #009688;
}