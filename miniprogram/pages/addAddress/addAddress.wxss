.page {
  padding: 10px;
  background-color: #f5f5f5;
}

.intelligent-fill {
  background: white;
  padding: 15px;
  margin-bottom: 15px;
}

.intelligent-fill input {
  width: 100%;
  height: 40px;
  border: none;
  font-size: 14px;
  color: #666;
}

.fill-ops {
  display: flex;
  justify-content: flex-end;
  margin-top: 10px;
}

.clear-btn {
  color: #666;
  background: white;
  border: 1px solid #ddd;
}

.recognize-btn {
  color: white;
  background: #4cd964;
  border: none;
  margin-left: 10px;
}

.receiver {
  background: white;
  padding: 15px;
  margin-bottom: 15px;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
}

.form-label {
  color: red;
  margin-right: 5px;
}

.form-input {
  flex: 1;
  height: 40px;
  border: 1px solid #eee;
  padding: 0 15px;
  border-radius: 5px;
}

.address-type {
  display: flex;
  margin-bottom: 15px;
}

.tab-item {
  padding: 10px 15px;
  font-size: 16px;
}

.tab-item.active {
  color: #000;
  border-bottom: 2px solid #4cd964;
}

.address-detail {
  background: white;
  padding: 15px;
  margin-bottom: 15px;
}

.submit-btn {
  width: 100%;
  height: 50px;
  background: #000;
  color: #ffd700;
  border: none;
  border-radius: 25px;
  font-size: 16px;
}