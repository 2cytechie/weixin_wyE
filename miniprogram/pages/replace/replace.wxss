.container {
  background: #f8f8f8;
  padding: 25rpx;
  height: 100vh; /* 占满整个屏幕高度 */
}
.zuoyou{
  display: flex;
  justify-content: space-between;
}
.qvcan{
  margin: 20rpx 0;
  display: flex;
  align-items: center;
}
.text-xuanze{
  color: #999;
    font-size: 30rpx;
    margin-top: 20rpx;
    text-align: right;
}
.top-image{
  margin: 5rpx 0;
  border-radius: 20rpx;
  width: 100%; 
  height: 350rpx;
  display: block;
  overflow: hidden;
}
.back-btn {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  font-size: 32rpx;
}
.banner {
  position: relative;
  height: 300rpx;
  margin: 20rpx 0;
}
.form-item {
  background: #fff;
  padding: 30rpx;
  margin: 20rpx 0;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
}
.item-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.item-label {
  margin: 20rpx 5rpx;
  font-size: 30rpx;
  flex: 1;
}
.item-input {
  color: #999;
  flex: 1;
  font-size: 28rpx;
}
.time-display {
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  text-align: center;
  margin: 40rpx;
  color: #666;
}
.time-picker-modal {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 600rpx;
  background: #fff;
  z-index: 1000;
}
.picker-header {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}
.time-picker {
  height: 500rpx;
  margin-top: 20rpx;
}
.picker-item {
  line-height: 50px;
  text-align: center;
}
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 999;
}
.textarea-item {
  background: #fff;
  padding: 30rpx;
  margin: 20rpx 0;
  border-radius: 20rpx;
  display: flex;
  font-size: 30rpx;
  flex-direction: column;
}
.textarea {
  background-color: #f0f0f0;
  border-radius: 12rpx;
  width: 630rpx;
  height: 150rpx;
  margin-top: 10rpx;
  padding: 10rpx;
  font-size: 28rpx;
}
.image-upload {
  width: 100%;
}
.xiadan {
  background: #333;
  color: #fff;
  padding: 30rpx; 
  border-radius: 30rpx;
  font-size: 32rpx;
  margin-top: 40rpx;
  text-align: center;
}
.upload-container {
  display: flex;
  flex-wrap: wrap;
}
.upload-box {
  background-color: rgb(223, 223, 223);
  position: relative;
}
.plus-sign {
  position: absolute;
  top: 45%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 80rpx;
  color: rgb(150, 150, 150);
}
.image-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}
.image-item {
  position: relative;
  margin-bottom: 10rpx;
}
.uploaded-image {
  margin-right: 17rpx;
  width: 145rpx;
  height: 145rpx;
}
.delete-icon {
  position: absolute;
  top: 10rpx;
  right: 25rpx;
  font-size: 35rpx;
  color: white;
  background-color: rgba(0, 0, 0, 0.8);
  width: 40rpx;
  height: 40rpx;
  line-height: 35rpx;
  text-align: center;
  border-radius: 50rpx;
  cursor: pointer;
  transform: translate(50%, -50%);
}
.left-section {
  display: flex;
}
.right-section {
  margin-left: 180rpx;
  display: flex;
}
.btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 10%;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.shadow {
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
.btn-text {
  font-size: 40rpx;
  color: #666;
  line-height: 1;
  margin-bottom: 6rpx; /* 视觉居中补偿 */
}
.count {
  min-width: 80rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  margin: 10rpx 40rpx;
}
.icon{
  font-size: 34rpx;
  text-align: center;
  width: 80rpx;
}
