.container {
  background: #f8f8f8;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏样式 */
.nav-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  background: white;
  border-bottom: 2rpx solid #f5f5f5;
}
.nav-left {
  position: absolute;
  left: 20rpx;
}
.back-icon { width: 30rpx; }
.nav-title {
  font-size: 36rpx;
  font-weight: bold;
}

/* 无地址提示区域样式 */
.no-address-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.no-address-img {
  width: 400rpx;
  margin-bottom: 20rpx;
}
.no-address-tip {
  font-size: 30rpx;
  color: #999;
}

/* 添加新地址按钮样式 */
.add-address-btn {
  margin: 20rpx;
  padding: 20rpx;
  background: #333;
  color: #b2ff59;
  font-size: 32rpx;
  border: none;
  border-radius: 20rpx;
  font-weight: bold;
}