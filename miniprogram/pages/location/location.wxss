.container {
  background: #f8f8f8;
  padding: 25rpx;
  height: 100vh; /* 占满整个屏幕高度 */
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏样式 */
.nav-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  background: white;
  border-bottom: 2rpx solid #f5f5f5;
}
.nav-left {
  position: absolute;
  left: 20rpx;
}
.back-icon { width: 30rpx; }
.nav-title {
  font-size: 36rpx;
  font-weight: bold;
}

/* 无地址提示区域样式 */
.no-address-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.no-address-img {
  width: 400rpx;
  margin-bottom: 20rpx;
}
.no-address-tip {
  font-size: 30rpx;
  color: #999;
}

/* 添加新地址按钮样式 */
.add-address-btn {
  margin: 20rpx;
  padding: 20rpx;
  background: #333;
  color: #b2ff59;
  font-size: 32rpx;
  border: none;
  border-radius: 20rpx;
  font-weight: bold;
}

/*地址列表*/
.address-list{
  display: flex;
  flex-direction: column;
  margin-bottom: 95rpx;

}
.address-item{
 display: flex;
 flex-direction: column;
 margin: 6rpx 20rpx;
padding: 20rpx 20rpx 10rpx 20rpx;
border-radius: 10rpx;
background-color:#dcdcdc;
}

.item-top{
font-size: 28rpx;
color:#333;
}
.item-content{
font-size: 24rpx;
color: #333;
padding-bottom: 20rpx;
margin-bottom: 20rpx;
border-bottom: 1rpx solid #dcdcdc;
}
.item-bottom{
display: flex;
align-items: center;
justify-content: space-between;
font-size: 24rpx;
color:#333;

}
.item-bottom .right{
 display:flex;
 align-items: center;
 justify-content: flex-end;
}

.item-bottom .right .txt{
 padding: 0 10rpx;
}
.left{
  font-size:29rpx;
}
