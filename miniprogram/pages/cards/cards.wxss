/* pages/cards/cards.wxss */
.container {
  background: #fff;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏样式 */
.nav-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  background: #f8f8f8;
  border-bottom: 2rpx solid #eee;
}
.nav-left {
  position: absolute;
  left: 20rpx;
}
.back-icon { width: 30rpx; }
.nav-title {
  font-size: 36rpx;
  font-weight: bold;
}

/* 无次卡提示区域样式 */
.no-card-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.no-card-img {
  width: 400rpx;
  margin-bottom: 20rpx;
}
.no-card-tip {
  font-size: 30rpx;
  color: #999;
}