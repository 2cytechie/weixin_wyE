/* pages/invite/invite.wxss */
.container {
  background: #fff;
  padding: 25rpx;
  height: 100vh; /* 占满整个屏幕高度 */
}

/* 导航栏样式 */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
}
.nav-left, .nav-right {
  display: flex;
  align-items: center;
}
.nav-left image, .nav-right image {
  width: 40rpx;
  height: 40rpx;
}
.nav-title {
  font-size: 40rpx;
  font-weight: bold;
}

/* 广告图样式 */
.banner {
  margin: 20rpx 0;
}
.banner image {
  width: 100%;
  height: auto;
}
.invite-btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  height: 120rpx;
  background: linear-gradient(90deg, #ff9900, #ff6600);
  color: white;
  font-size: 44rpx;
  border-radius: 60rpx;
  margin-top: -60rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 102, 0, 0.2);
}

/* 数据展示区样式 */
.data-section {
  padding: 40rpx 30rpx;
}
.section-title {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
}
.title-icon {
  color: #ff9900;
  font-size: 32rpx;
  margin: 0 20rpx;
}
.data-table {
  background: #f8f2ed;
  padding: 30rpx;
  border-radius: 20rpx;
}
.table-row {
  display: flex;
  justify-content: space-between;
}
.table-col {
  text-align: center;
}
.table-col text {
  display: block;
  color: #333;
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.num {
  color: #ff4444;
  font-size: 44rpx;
  font-weight: bold;
}
.invited-friends {
  text-align: center;
  color:rgb(255, 0, 0);
  font-size: 44rpx;
  margin-top: 30rpx;
}
.invited-friends2 {
  text-align: center;
  color:rgb(0, 25, 250);
  font-size: 30rpx;
  margin-top: 30rpx;
}