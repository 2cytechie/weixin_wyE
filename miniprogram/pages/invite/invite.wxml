<!--pages/invite/invite.wxml-->

<view class="container">
  <!-- 导航栏 -->
  <view class="nav-bar">
    <view class="nav-left">
      <image src="/images/邀请.png" mode="aspectFit"></image>
    </view>
    <view class="nav-title">邀请有礼</view>
    <view class="nav-right">
      <image src="/images/红包.png" mode="aspectFit"></image>
      <image src="/images/红包.png" mode="aspectFit"></image>
    </view>
  </view>

  <!-- 广告图区域 -->
  <view class="banner">
    <image src="/images/红包复制.jpg" mode="widthFix"></image>
    <button class="invite-btn" open-type="share">立即邀请</button>
  </view>

  <!-- 数据展示区 -->
  <view class="data-section">
    <view class="section-title">
      <view class="title-icon">★</view>
      邀请收益
      <view class="title-icon">★</view>
    </view>
    <view class="data-table">
      <view class="table-row">
        <view class="table-col">
          <text>已邀请(人)</text>
          <text class="num">{{inviteCount}}</text>
        </view>
        <view >
          <button class="invited-friends" plain="false"
          bind:tap="duihuan">
          <text>点击兑换</text>
          </button>
        </view>

        <view class="table-col">
          <text>优惠券(张)</text>
          <text class="num">{{couponcount}}</text>
        </view>
      </view>
    </view>
    <view class="invited-friends2">—— 奖励规则 ——</view>
  </view>
</view>