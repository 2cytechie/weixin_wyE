.container {
  padding: 25px;
  height: 100vh; /* 占满整个屏幕高度 */
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
}

.title {
  align-items: center;
  font-size: 40rpx;
  font-weight: bold;
}

.header-ops {
  display: flex;
  gap: 10px;
}

.dots,
.icon {
  font-size: 18px;
}

.points-section {
  background-color: #f5f5f5;
  padding: 20px;
  border-radius: 10px;
  margin-bottom: 20px;
}

.points-count {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.big-number {
  font-size: 30px;
  font-weight: bold;
  margin-right: 10px;
}

.points-desc {
  display: flex;
  flex-direction: column;
}

.sign-desc {
  font-size: 12px;
  color: #999;
}

.sign-matrix {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.sign-item {
  text-align: center;
}

.day {
  font-size: 14px;
}

.sign-status image {
  width: 30px;
  height: 30px;
}

.continuous-sign {
  width: 100%;
  margin-top: 20px;
  text-align: center;
}

.sign-count {
  font-size: 16px;
  font-weight: bold;
}

.sign-tip {
  font-size: 12px;
  color: #999;
}

.battery-icon {
  width: 30px;
  height: 30px;
  margin-top: 10px;
}

.exchange-section {
  background-color: #f5f5f5;
  padding: 20px;
  border-radius: 10px;
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}

.exchange-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ccc;
  padding: 10px 0;
}

.item-left {
  display: flex;
  align-items: center;
}

.item-icon {
  width: 30px;
  height: 30px;
  margin-right: 10px;
}

.item-desc {
  display: flex;
  flex-direction: column;
}

.item-title {
  font-size: 16px;
}

.item-tip {
  font-size: 12px;
  color: #999;
}

.item-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.money {
  font-size: 16px;
  font-weight: bold;
}

.condition {
  font-size: 12px;
  color: #999;
}

.exchange-btn {
  margin-top: 10px;
  background-color: #007aff;
  color: #fff;
  border: none;
  padding: 5px 10px;
  border-radius: 5px;
}
