.container {
  background-color: #f5f5f5;
}
.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.text-name{
  margin-left: 20rpx;
  font-size: 42rpx;
}
.text-mony{
  color: red;
}
.text-niming{
  margin-left: 20rpx;
  font-size: 36rpx;
}
.order-section {
  background: white;
  margin: 15px 10px;
  padding: 15px;
  border-radius: 8px;
}
.section-title {
  color: #666;
  font-size: 16px;
  margin-bottom: 10px;
}
.route-info {
  font-size: 14px;
  color: #333;
}
.receiver-info {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}
.reward-btn {
  background-color: #ff4d4f;
  color: white;
  border-radius: 20px;
  padding: 2px 8px;
}
.income-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
}
.task-accept {
  background-color: #f9f9f9;
}
.task-desc {
  padding: 10px;
  border: 1px solid #eee;
  border-radius: 4px;
  font-size: 14px;
  color: #666;
}
.takeout-section .takeout-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 0;
  font-size: 14px;
  color: #333;
}
.tip-total-section {
  background: white;
}
.tip-item, .total-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 0;
  font-size: 14px;
}
.detail-section .detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 0;
  font-size: 12px;
  color: #666;
}