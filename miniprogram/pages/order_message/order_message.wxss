.container {
  background-color: #f5f5f5;
  padding: 25rpx;
  height: 100vh; /* 占满整个屏幕高度 */
}
.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.text-name{
  margin-left: 20rpx;
  font-size: 42rpx;
}
.text-mony{
  color: red;
}
.text-niming{
  margin-left: 20rpx;
  font-size: 36rpx;
}
.order-section {
  background: white;
  margin: 15px 10px;
  padding: 15px;
  border-radius: 8px;
}
.section-title {
  font-weight: bold;
  color: black;
  font-size: 30rpx;
  margin-bottom: 10px;
}
.route-info {
  font-size: 14px;
  color: #333;
}
.receiver-info {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}
.reward-btn {
  background-color: #ff4d4f;
  color: white;
  border-radius: 20px;
  padding: 2px 8px;
}
.income-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
}
.task-accept {
  background-color: #f9f9f9;
}
.task-desc {
  padding: 10px;
  border: 1px solid #eee;
  border-radius: 4px;
  font-size: 14px;
  color: #666;
}
.takeout-section .takeout-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 0;
  font-size: 14px;
  color: #333;
}
.tip-total-section {
  background: white;
}
.tip-item, .total-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 0;
  font-size: 14px;
}
.detail-section .detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 0;
  font-size: 12px;
  color: #666;
}
.image-item {
  position: relative;
  margin-bottom: 10rpx;
  margin-left: 5rpx;
}
.uploaded-image {
  margin-right: 17rpx;
  width: 145rpx;
  height: 145rpx;
}
.image-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}
/* 优化后的CSS样式 */
.full-screen-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: white;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.full-screen-image-container {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box; /* 新增 */
  overflow: hidden; /* 新增 */
}

.full-screen-image {
  width: calc(100% + 2rpx); /* 调整后的关键属性 */
  height: 100%;
  will-change: transform;
  box-sizing: border-box; /* 新增 */
  margin: 0 -1rpx;
}