<!--pages/coupons/coupons.wxml-->
<view class="container">
  <!-- 顶部导航栏 -->
  <view class="nav-bar">
    <view class="nav-left" bindtap="goBack">
      <image src="/images/back.png" mode="widthFix" class="back-icon"></image>
    </view>
    <view class="nav-title">我的优惠券</view>
  </view>

  <!-- 优惠券列表 -->
  <view class="coupon-list">
    <view class="coupon-card" wx:for="{{couponList}}" wx:key="id">
      <view class="coupon-header">
        <image src="{{item.icon}}" mode="widthFix" class="coupon-icon"></image>
        <view class="coupon-info">
          <view class="coupon-name">{{item.name}}</view>
          <view class="coupon-time">{{item.expireTime}}</view>
        </view>
        <view class="coupon-price">
          <view class="price-text">¥{{item.amount}}</view>
          <view class="condition">满{{item.condition}}可用</view>
        </view>
      </view>
      <view class="coupon-line"></view>
      <view class="coupon-footer">
        <view class="usage">适用于所有服务</view>
        <button class="use-btn" bindtap="goToUse">去使用</button>
      </view>
    </view>
  </view>

  <!-- 无更多提示 -->
  <view class="no-more-tip">----- 已展示全部优惠券 -----</view>
</view>